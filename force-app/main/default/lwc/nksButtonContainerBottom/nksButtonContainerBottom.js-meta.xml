<?xml version="1.0" encoding="UTF-8"?>
<LightningComponentBundle xmlns="http://soap.sforce.com/2006/04/metadata">
    <apiVersion>59.0</apiVersion>
    <isExposed>true</isExposed>
    <masterLabel>NKS Button Container Bottom</masterLabel>
    <targets>
        <target>lightning__RecordPage</target>
    </targets>
    <targetConfigs>
        <targetConfig targets="lightning__RecordPage">
            <property name="channelName"
                description="The variable is used to differentiate between channels. Select between Chat, Conversation note or STO."
                label="Channel name" type="String" default="Chat" />
            <property name="flowNames" label="Flow developernames, seperated by commas"
                type="String" default="NKS_Journal_Chat_Thread_Screenflow, NKS_Chat_Send_NAV_Task" />
            <property name="flowLabels" label="Label names for buttons, also seperated by commans"
                type="String" default="NKS_Journal, NKS_Create_NAV_Task" />
            <property name="setBorders" label="Set top and bottom borders" type="Boolean"
                default="false" />
            <property name="showNotifications" label="Show error/success notifications for flows"
                type="Boolean"
                default="false" />
        </targetConfig>
    </targetConfigs>
</LightningComponentBundle>