<apex:page controller="NKS_RecordPrintController">
    <apex:outputPanel rendered="{!NOT(ISNULL(objectType))}">
        <h1>{!objectType} detaljer</h1>

        <apex:outputPanel rendered="{!objectType == 'Case'}">
        <!-- TODO: Add STO Category from Case? --> 
            <p><b>Tema:</b> {!threadRecord.CRM_Theme_Group_Name__c}</p>
        </apex:outputPanel>
        
        <apex:outputPanel rendered="{!objectType == 'Thread__c'}">
            <p><b>Tema:</b> {!threadRecord.CRM_Theme_Group_Name__c}</p>
        </apex:outputPanel>
        
        <apex:outputPanel rendered="{!objectType == 'LiveChatTranscript'}">
            <p><b>Tema:</b> {!chatRecord.NKS_Chat_Queue__c}</p>
            <p><b>Chat:</b> {!chatRecord.Body}</p>
        </apex:outputPanel>
        
        <apex:outputPanel rendered="{!objectType == 'Conversation_Note__c'}">
            <p><b>Tema:</b> {!convNoteRecord.CRM_Theme_Group_Name__c}</p>
            <p><b>Samtalereferat:</b> {!convNoteRecord.CRM_Conversation_Note__c}</p>
        </apex:outputPanel>

        <apex:outputPanel rendered="{!NOT(ISNULL(messages))}">
            <h2>Meldinger</h2>
            <apex:repeat value="{!messages}" var="msg">
                <p>{!msg.CRM_Message_Text__c}</p>
            </apex:repeat>
        </apex:outputPanel>
    </apex:outputPanel>
</apex:page>
